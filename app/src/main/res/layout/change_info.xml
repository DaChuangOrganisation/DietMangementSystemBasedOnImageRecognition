<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/bg12"
    >
    <ImageView
        android:id="@+id/backmain"
        android:padding="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>
    <EditText
        android:id="@+id/sex1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/usernameid"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:editable="false"
        android:text="性别：" />

    <EditText
        android:id="@+id/height1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/age1"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:editable="false"
        android:text="身高：" />


    <EditText
        android:id="@+id/heightedit"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_alignTop="@id/agedit"
        android:layout_marginStart="2dp"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:inputType="number"
        android:layout_toEndOf="@+id/usernameid" />
    <EditText
        android:id="@+id/weight1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/height1"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:editable="false"
        android:text="体重：" />

    <EditText
        android:id="@+id/weightedit"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_alignTop="@id/heightedit"
        android:layout_marginStart="2dp"
        android:layout_marginTop="60dp"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/usernameid" />
    <EditText
        android:id="@+id/age1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/sex1"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:editable="false"
        android:text="年龄：" />

    <EditText
        android:id="@+id/agedit"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_alignTop="@id/radioGroup_sex_id"
        android:layout_marginStart="2dp"
        android:layout_marginTop="60dp"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/usernameid" />

    <TextView
        android:id="@+id/agetext"
        android:layout_width="76dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/radioGroup_sex_id"
        android:layout_marginStart="0dp"
        android:text="岁"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="59dp"
        android:layout_toEndOf="@+id/agedit"
        android:layout_toRightOf="@+id/agedit" />
    <TextView
        android:id="@+id/heightext"
        android:layout_width="76dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/agetext"
        android:layout_marginStart="0dp"
        android:text="cm"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="59dp"
        android:layout_toEndOf="@+id/agedit"
        android:layout_toRightOf="@+id/agedit" />
    <TextView
        android:id="@+id/weighttext"
        android:layout_width="76dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/heightext"
        android:layout_marginStart="0dp"
        android:text="kg"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="59dp"
        android:layout_toEndOf="@+id/agedit"
        android:layout_toRightOf="@+id/agedit" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_ziti"
        />


    <EditText
        android:id="@+id/username1"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@+id/iv_1"
        android:layout_marginStart="2dp"
        android:layout_marginTop="19dp"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/usernameid" />

    <EditText
        android:id="@+id/usernameid"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/ly_1"
        android:layout_marginTop="124dp"
        android:text="用户名："
        android:background="@null"
        android:editable="false"
        />

    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/heightedit"
        android:text="修改"
        android:layout_marginStart="142dp"
        android:layout_marginTop="65dp"

        android:layout_marginEnd="133dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/shape"
        android:fontFamily="casual"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:theme="@android:style/Theme.Translucent" />
    <RadioGroup
        android:id="@+id/radioGroup_sex_id"
        android:layout_width="276dp"
        android:layout_height="55dp"
        android:layout_alignTop="@id/username1"
        android:layout_marginTop="60dp"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/usernameid" >

        <RadioButton
            android:id="@+id/boy_id"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:shadowColor="@color/google_blue"
            android:textColor="@color/google_blue"
            android:text="♂男" />

        <RadioButton
            android:id="@+id/girl_id"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="-30dp"
            android:shadowColor="@color/google_blue"
            android:text="♀女"
            android:textColor="	#EE6AA7"
            android:textColorLink="#4CAF50" />

    </RadioGroup>

</RelativeLayout>
