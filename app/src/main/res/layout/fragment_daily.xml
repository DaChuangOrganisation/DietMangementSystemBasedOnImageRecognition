<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context="com.example.administrator.kalulli.ui.daily.DailyFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="饮食记录"
        android:textColor="#ffff"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_back">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="11dp"
            android:text="每日应当摄入" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="千卡"
            android:layout_alignTop="@id/textView6"
            android:layout_toEndOf="@id/textView6"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/daily_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:text="今日还可摄入" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="千卡"
            android:layout_alignTop="@id/daily_more_tv"
            android:layout_alignStart="@id/label"/>

        <TextView
            android:id="@+id/daily_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="45dp"
            android:text="05/17" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_back"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#ffff">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="早餐"
                android:textColor="#3d3d3d" />

            <TextView

                android:id="@+id/morning_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="39dp"
                android:text="未记录" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#ffff">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                android:text="午餐"
                android:textColor="#3d3d3d" />

            <TextView
                android:id="@+id/afternoon_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView10"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="38dp"
                android:text="未记录" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#ffff">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="晚餐"
                android:textColor="#3d3d3d" />

            <TextView
                android:id="@+id/evening_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="39dp"
                android:text="未记录" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/weight_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg"
        android:text="卡路里曲线"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/daily_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg"
        android:text="营养分析与饮食建议"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loading"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            app:indicatorColor="@color/google_blue"
            app:indicatorName="PacmanIndicator" />

        <TextView
            android:id="@+id/loading_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/loading"
            android:gravity="center"
            android:text="分析中..."
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
